# EdTech Ecosystem Production Environment Variables
# Скопируйте этот файл в .env.production и настройте под ваши нужды

# Domain Configuration
DOMAIN_NAME=edtech-ecosystem.com
CLIENT_URL=https://edtech-ecosystem.com

# Database Configuration
MONGO_ROOT_PASSWORD=your-super-secure-mongo-password
MONGODB_URI=mongodb://admin:your-super-secure-mongo-password@mongodb:27017/edtech_ecosystem?authSource=admin

# Redis Configuration
REDIS_PASSWORD=your-super-secure-redis-password
REDIS_URL=redis://:your-super-secure-redis-password@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Payment Systems Configuration
# ЮKassa
YOOKASSA_SHOP_ID=your-yookassa-shop-id
YOOKASSA_SECRET_KEY=your-yookassa-secret-key

# Сбербанк
SBERBANK_USERNAME=your-sberbank-username
SBERBANK_PASSWORD=your-sberbank-password

# Тинькофф
TINKOFF_TERMINAL_KEY=your-tinkoff-terminal-key
TINKOFF_PASSWORD=your-tinkoff-password

# Робокасса
ROBOKASSA_MERCHANT_LOGIN=your-robokassa-merchant-login
ROBOKASSA_PASSWORD1=your-robokassa-password1
ROBOKASSA_PASSWORD2=your-robokassa-password2

# QIWI
QIWI_SHOP_ID=your-qiwi-shop-id
QIWI_SECRET_KEY=your-qiwi-secret-key

# WebMoney
WEBMONEY_PURSE=your-webmoney-purse
WEBMONEY_SECRET_KEY=your-webmoney-secret-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@edtech-ecosystem.com
FROM_NAME=EdTech Ecosystem

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/www/static/uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring Configuration
GRAFANA_PASSWORD=your-grafana-admin-password
PROMETHEUS_RETENTION_TIME=720h

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/edtech/application.log

# Quantum AI Configuration
QUANTUM_AI_ENDPOINT=https://quantum-ai.edtech-ecosystem.com
QUANTUM_AI_API_KEY=your-quantum-ai-api-key

# Metaverse Configuration
METAVERSE_ENDPOINT=https://metaverse.edtech-ecosystem.com
METAVERSE_API_KEY=your-metaverse-api-key

# Neural Interface Configuration
NEURAL_INTERFACE_ENDPOINT=https://neural.edtech-ecosystem.com
NEURAL_INTERFACE_API_KEY=your-neural-interface-api-key

# Holographic Projections Configuration
HOLOGRAM_ENDPOINT=https://hologram.edtech-ecosystem.com
HOLOGRAM_API_KEY=your-hologram-api-key

# Quantum Mentors Configuration
QUANTUM_MENTORS_ENDPOINT=https://mentors.edtech-ecosystem.com
QUANTUM_MENTORS_API_KEY=your-quantum-mentors-api-key

# Analytics Configuration
ANALYTICS_ENDPOINT=https://analytics.edtech-ecosystem.com
ANALYTICS_API_KEY=your-analytics-api-key

# CDN Configuration
CDN_URL=https://cdn.edtech-ecosystem.com
CDN_API_KEY=your-cdn-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=edtech-ecosystem-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Development/Production flags
NODE_ENV=production
DEBUG=false
VERBOSE_LOGGING=false

# Port Configuration
PORT=5000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_CA_PATH=/etc/nginx/ssl/ca.pem

# Load Balancer Configuration
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true

# CORS Configuration
CORS_ORIGIN=https://edtech-ecosystem.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# API Versioning
API_VERSION=v1
API_PREFIX=/api/v1

# Feature Flags
FEATURE_QUANTUM_AI=true
FEATURE_METAVERSE=true
FEATURE_NEURAL_INTERFACE=true
FEATURE_HOLOGRAM=true
FEATURE_QUANTUM_MENTORS=true
FEATURE_ANALYTICS=true
FEATURE_PAYMENTS=true
FEATURE_NOTIFICATIONS=true
FEATURE_OFFLINE_MODE=true

# Performance Configuration
CLUSTER_MODE=true
CLUSTER_WORKERS=max
MAX_MEMORY_RESTART=1G
NODE_OPTIONS=--max-old-space-size=1024

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3
